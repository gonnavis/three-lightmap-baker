{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"baseUrl": ".",
		"lib": [
			"es2015",
			"ES2019",
			"DOM",
			"ES7"
		],
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"alwaysStrict": false,
	},
	"include": [
		"./src/"
	],
	"exclude": [
		"node_modules",
		"test"
	]
}